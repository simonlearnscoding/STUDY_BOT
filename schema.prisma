generator db {
  interface            = "asyncio"
  recursive_type_depth = 5
  provider             = "prisma-client-py"
}

datasource db {
  provider = "mysql"
  url      = "mysql://simon:spqr-server@192.53.122.228/discordjs"
}

model User {
  id           BigInt         @id
  name         String
  bot          Boolean
  nick         String
  logsNow      logsNow[]
  logsDate     logsDate[]
  historicLogs historicLogs[]
}

model logsNow {
  id        Int          @id @default(autoincrement())
  user      User         @relation(fields: [userId], references: [id])
  activity  String
  timestamp DateTime     @default(now())
  type      ActivityType
  userId    BigInt
}

model logsDate {
  id         Int      @id @default(autoincrement())
  user       User     @relation(references: [id], fields: [userId])
  activity   String
  date       DateTime
  Type       String
  minutes    Int      @default(0)
  userId     BigInt
  activityId Int
}

model historicLogs {
  id         Int          @id @default(autoincrement())
  user       User         @relation(references: [id], fields: [userId])
  type       ActivityType
  activity   String
  startedAt  DateTime
  endedAt    DateTime
  userId     BigInt
  activityId Int
}

model LevelRole {
  name     levelRole @id
  minlevel Int
}

enum levelRole {
  GLADIATOR
  FREEDMANEEDMAN
  PLEBEIAN
  PATRICIAN
  SENATOR
  CONSUL
  EMPEROR
}

enum ActivityType {
  CAM
  TOTAL
  LOG
  SS
  BOTH
  VC
}
